<form method="POST" action="/recipes/<%= @recipe.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Name: <input type="text" value="<%= @recipe.name %>"id=name name="recipe[name]"></p>
  <p>Ingredients: <input type="text" id=ingredients value="<%= @recipe.ingredients %>" name="recipe[ingredients]"></p>
  <p>Cook Time: <input type="text" id=cook_time value="<%= @recipe.cook_time %>" name="recipe[cook_time]"></p>
  <input type="submit" value="submit">
</form>
